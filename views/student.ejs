<html>
    <head>
        <title>
            <%= title%>  
        </title>
    </head>
    <body>
        <%- include('_header')%>
        <h1>student</h1>
        <!-- form to add student -->
        <div id="student">
            <form action="/api/v1/students/createStudent" method="POST" id="student-form">
                <label for="name">name:</label>
                <input type="text" id="name" name="name" required><br><br>
                <label for="email">Student email:</label>
                <input type="email" id="email" name="email" required><br><br>
                <label for="college">College </label>
                <input type="text" id="college" name="college" required><br><br>
                <label for="batch">Your Batch </label>
                <input type="text" id="batch" name="batch"required><br><br>
                <label for="dsaScore">DSA Score </label>
                <input type="number" id="dsaScore" name="dsaScore" required min="0" max="100"><br><br>
                <label for="webDScore">Web Development Score </label>
                <input type="number" id="webDScore" name="webDScore" required min="0" max="100"><br><br>
                <label for="reactScore">React Score </label>
                <input type="number" id="reactScore" name="reactScore"required min="0" max="100"><br><br>
                <p>Are you working:</p>
                <label for="status">True </label>
                <input type="radio" name="status" id="status"[(ngModel)]="document.valid" [value]="true">
                <label for="status">False </label>
                <input type="radio"id ="status" name="status" [(ngModel)]="document.valid" [value]="false">
                <button type="submit">Submit</button>
            </form>
        </div>
        <!--  download the data -->
        <div>
            <h2>Download student details</h2>
            <form action="/api/v1/students/download" method="post">
                <button type="submit">Download as CSV file</button>
                </form>
        </div>
    </body>
</html>
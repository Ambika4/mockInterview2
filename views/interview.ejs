<html>
    <head>
        <title>
            <%= title%> 
        </title>
    </head>
    <body>
        <%- include('_header')%>
        <!-- div for displaying interview -->
        <div id="display-interviews">
            <h2>List of company for interview</h2> 
            <ul>
                <% for(let interview of interviews){ %>
                 <li>
                     <div id="comapny-name">
                        <%= interview.companyName %>
                     </div>

                 </li>
                 <%}%>
                </ul>
        </div>
        <!-- form to display interview -->
        <div id="interview-form">
            <h2>Schedule interview</h2>
            <form action="/api/v1/interviews/createinterview" method="POST" id="interview">
                <label for="companyName">Company name:</label>
                <input type="text" id="companyName" name="companyName" required><br><br>
                <label for="interviewDate">Interview Date</label>
                <input type="date" id="interviewDate" name="interviewDate" required
                 value="yyyy-mm-dd" min="March 4,2018" max="March 31,2033"><br>
                 <button type="submit">Submit</button>
            </form>
        </div>
        <!-- Form to allocate students to interview -->
        <div id="allocation-form">
            <h2>Allocate students for interview</h2>
            <form action="/api/v1/interviews/scheduleinterview" method="POST" id="allocateInterview">
                 <label for="interview">Choose an interview:</label>
                 <select id="interview"name="interview" required>
                      <% for(let i of interviews){ %>  
                    <option name = "interview" value=<%= i._id %>><%= i.companyName %></option>
                    <%}%>
                    </select>
                    <label for="student">Choose an Student:</label>
                 <select id="student"name="student">
                    <% for(let i of students){ %>   
                    <option name="student" value=<%= i._id %>><%= i.name %></option>
                    <%}%>
                    </select>
                    <button type="submit">Submit</button>
            </form>
        </div>
        <div>
            
            <!-- form to set results for student -->
        </div>
        <div id="result-form">
            <h2>Select Company for list Students  </h2>
            <form action="/api/v1/interviews/studentsList" method="GET" id="result">
                 <label for="interview">Choose an Company:</label>
                 <select id="interview"name="interview">
                    <% for(let i of interviews){ %>  
                  <option name = <%=i._id%> value=<%= i._id%>><%= i.companyName %></option>
                  <%}%>
                  </select>
                    <button type="submit">Submit</button>
            </form>
        </div>
       
     
       
    </body>
</html>